<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:hardwareAccelerated="true">
    <ScrollView
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:scrollbars="vertical"
         android:scrollbarStyle="insideOverlay"
         android:fadeScrollbars="true"
         android:hardwareAccelerated="true">
        <HorizontalScrollView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:scrollbars="horizontal"
              android:scrollbarStyle="insideOverlay"
              android:fadeScrollbars="true"
              android:hardwareAccelerated="true">
              <GridLayout
                  android:id="@+id/gridLayoutGallery"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:columnCount="0"
                  android:rowCount="0"
                  android:gravity="center"
                  android:horizontalSpacing="0dp"
                  android:numColumns="auto_fit"
                  android:stretchMode="columnWidth"
                  android:hardwareAccelerated="true" >
              </GridLayout>
        </HorizontalScrollView>
    </ScrollView>
    <LinearLayout
        android:layout_width="@dimen/iconSize"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="bottom"
        android:layout_marginLeft="@dimen/actionBarMarginLeft"
        android:layout_marginRight="@dimen/actionBarMarginLeft"
        android:hardwareAccelerated="true"
        >
        <Button
            android:id="@+id/btnGyMinimized"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="@dimen/iconSize"
            android:layout_height="@dimen/iconSize"
            android:background="@drawable/ic_window_minimized"
            android:alpha="@dimen/btnAlpha"
            android:hardwareAccelerated="true" />
        <Button
            android:id="@+id/btnGyNormal"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="@dimen/iconSize"
            android:layout_height="@dimen/iconSize"
            android:background="@drawable/ic_window_normal"
            android:alpha="@dimen/btnAlpha"
            android:hardwareAccelerated="true" />
        <Button
            android:id="@+id/btnGyFfitted"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="@dimen/iconSize"
            android:layout_height="@dimen/iconSize"
            android:background="@drawable/ic_window_fitted"
            android:alpha="@dimen/btnAlpha"
            android:hardwareAccelerated="true" />
        <!-- Button
            style="?android:attr/buttonStyleSmall"
            android:id="@+id/btnGyAllSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_save" / -->
        <Button
            style="?android:attr/buttonStyleSmall"
            android:id="@+id/btnGyClose"
            android:layout_width="@dimen/iconSize"
            android:layout_height="@dimen/iconSize"
            android:background="@drawable/ic_close"
            android:alpha="@dimen/btnAlpha"
            android:hardwareAccelerated="true" />
    </LinearLayout>
</FrameLayout>